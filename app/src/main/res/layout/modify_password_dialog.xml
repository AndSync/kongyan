<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#178078"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="旧密码："
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <com.wftd.kongyan.view.PowerfulEditText
                android:id="@+id/old_password"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:hint="请输入旧密码（6-15位）"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="15"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="10sp"
                app:borderStyle="rectangle"
                app:clearDrawable="@drawable/clear_all"
                app:styleColor="#ffffff"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="新密码："
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <com.wftd.kongyan.view.PowerfulEditText
                android:id="@+id/new_password"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:hint="请输入新密码（6-15位）"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="15"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="10sp"
                app:borderStyle="rectangle"
                app:clearDrawable="@drawable/clear_all"
                app:styleColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="再次输入："
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <com.wftd.kongyan.view.PowerfulEditText
                android:id="@+id/again"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:hint="请再次输入密码（6-15位）"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="15"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="10sp"
                app:borderStyle="rectangle"
                app:clearDrawable="@drawable/clear_all"
                app:styleColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/confirm"
            style="@style/bt_login"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/confirm"/>
    </LinearLayout>

</LinearLayout>